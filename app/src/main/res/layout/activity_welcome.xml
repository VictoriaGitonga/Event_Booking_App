<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.welcome.WelcomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GIGSKE"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold|italic"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/background_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/choose_account"
                style="@style/choose_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an account"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Organizer"
                android:theme="@style/login_btn_style"
                android:textSize="15sp"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btn_user"
                style="@style/register_btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER"
                android:theme="@style/login_btn_style"
                android:textSize="15sp"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>



