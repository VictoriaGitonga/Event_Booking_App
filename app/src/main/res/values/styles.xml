<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="choose_acc">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25dp</item>

    </style>

    <style name="login_btn_style" parent="Theme.MaterialComponents.Light">
<!--        <item name="android:backgroundTint">#000000</item>-->
        <item name="android:textColor">#FFC107</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">nunito_regular</item>

    </style>

    <style name="register_btn_style">
<!--        <item name="android:backgroundTint">#000000</item>-->
        <item name="android:textColor">#BB86FC</item>
        <item name="backgroundTint">#000000</item>

    </style>

    <style name="tv_create_acc_style">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayoutStyleWallet" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#666666</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColor">#6F7070</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

</resources>